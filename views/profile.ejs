            <!-- Display the user's gender (placeholder) -->
            <p>Gender: Gender Should Be Here</p>
            
            <!-- Display the user's bio (placeholder) -->
            <p>Bio: Bio Should Be Here</p>
        </div>

        <!-- Create a button to navigate to the edit profile page -->
        <a href="/editprofile" class="btn btn-primary mt-3">Edit Profile</a>
        
        <!-- Create a button to go back to the home page -->
        <a href="/matches" class="btn btn-secondary mt-3">Back Home</a>
    </div>
